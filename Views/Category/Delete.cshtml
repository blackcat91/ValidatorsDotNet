@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="delete" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Remove Category</h2>
            <hr />
        </div>
       
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input disabled asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Delete</button>
        <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Category List</a>
    </div> 
</form> 

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" /> 
    }
}
