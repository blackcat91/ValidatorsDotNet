@model IEnumerable<Category> 
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category <i class="bi bi-plus-circle-dotted"></i></a>
        </div>
    </div>


<table class="table table-bordered table-striped w-100">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
             <th>
                Display Order
            </th>
            <th>Edit</th>
</tr>

    </thead>

    <tbody>
      
        @foreach(var obj in Model )
        {
            <tr>
                <td class="w-50">
                    @obj.Name
                </td>
                 <td class="w-30">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pen text-secondary" ></i> Edit</a>
                        <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3-fill text-secondary"></i> Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
